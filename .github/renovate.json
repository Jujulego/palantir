{
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "main"
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchCategories": [
        "ci"
      ],
      "addLabels": [
        "github-actions"
      ]
    },
    {
      "matchCategories": [
        "js"
      ],
      "addLabels": [
        "javascript"
      ],
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
